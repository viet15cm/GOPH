@model Product
@{
    Layout = "~/Views/Shared/_LayoutManagerProduct.cshtml";
    ViewData["Title"] = "Xóa sản phẩm";
    ViewData["ActiveNavbar"] = "Product";
}

<div class="container mt-2">
    <h5><i class="bi bi-trash3"></i> @ViewData["Title"]</h5>
    <hr />
    <div class="row">
        <div class="col-md-4 mb-2">
            <p style="font-weight: bold">@Model.Name</p>
            <img style="width: 100%;" src="~/image/delete.png" />
            <form class="mt-2" method="post" asp-route-id="@Model.Id">
                <button type="submit" class=" btn btn-sm btn-danger">Xóa</button>
                <a asp-area="manager" asp-action="detail" asp-controller="product" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Về</a>
            </form>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

