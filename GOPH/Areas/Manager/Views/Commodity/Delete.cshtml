@model Commodity
@{
    Layout = "~/Views/Shared/_LayoutManagerProduct.cshtml";
    ViewData["Title"] = "Xóa mặt hàng";
    ViewData["ActiveNavbar"] = "Commodity";
}

<div class="container mt-2">
    <h5 style="font-weight: bold;"><i class="bi bi-trash"></i> @ViewData["Title"]</h5>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <p>-@Model.Name-</p>
            <img style="width: 100%;" src="~/image/delete.png" />
            <form class="mt-2" method="post" asp-route-id="@Model.Id">
                <button type="submit" class=" btn btn-sm btn-danger">Xóa</button>
                <a asp-area="manager" asp-action="index" asp-controller="commodity" class="btn btn-sm btn-light">Về</a>
            </form>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
